{
  "name": "theme-tools",
  "description": "A monorepo for theme-core, yo theme, and more to help theming with good tools.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "eslint": "eslint ./",
    "stylelint": "node_modules/stylelint/bin/stylelint.js 'examples/common/source/styles/**/*.scss' --syntax scss --config packages/theme-core-config--stylelint/index.js --formatter verbose",
    "fix": "eslint --fix ./",
    "mocha": "mocha packages/*/tests",
    "start": "nodemon --ignore node_modules -w packages/ --exec 'npm test'",
    "test": "npm run mocha && npm run eslint && npm run stylelint",
    "precommit": "npm test",
    "postinstall": "npm run bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drupal-pattern-lab/theme-tools.git"
  },
  "keywords": [
    "theme-tools",
    "theme-core",
    "monorepo",
    "pattern-lab",
    "drupal"
  ],
  "author": "EvanLovely <evanlovely@gmail.com> (http://evanlovely.com)",
  "maintainers": [],
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drupal-pattern-lab/theme-tools/issues"
  },
  "homepage": "https://github.com/drupal-pattern-lab/theme-tools#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-fs": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.3",
    "lerna": "^2.0.0-rc.4",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "stylelint": "^7.10.1"
  }
}
